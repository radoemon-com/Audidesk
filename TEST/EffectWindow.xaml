<Window x:Class="Audidesk.EffectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Audidesk"
        mc:Ignorable="d"
        Title="EffectWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20" VerticalAlignment="Center">
            <Button Content="Select and Play" Click="SelectAndPlayButton_Click" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Button Content="Toggle Echo" Click="ToggleEchoButton_Click" Width="100"/>
                <Slider x:Name="EchoSlider" Minimum="0" Maximum="1" Value="0.5" Width="300" Margin="10,0,0,0"
                        ValueChanged="EchoSlider_ValueChanged"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Button Content="Toggle Reverb" Click="ToggleReverbButton_Click" Width="100"/>
                <Slider x:Name="ReverbSlider" Minimum="0" Maximum="1" Value="0.5" Width="300" Margin="10,0,0,0"
                        ValueChanged="ReverbSlider_ValueChanged"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
