<Window x:Class="Audidesk.PlayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Audidesk"
        mc:Ignorable="d"
        Title="PlayerWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Content="シャッフル切り替え" Click="ShuffleButton_Click" Margin="10"/>
        
        <ListBox x:Name="MusicListBox"
                 Grid.Row="1"
                 Margin="10"
                 SelectionChanged="MusicListBox_SelectionChanged"/>
    </Grid>
</Window>
